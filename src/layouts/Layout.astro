---
import Header from '../components/Header/Header.jsx';
import Footer from '../components/Footer/Footer.astro';

const { title } = Astro.props;

let linkData = [
  {
    linkHref: '/about',
    imageSrc: '/uploads/test-img.png',
    copy: 'About',
    isActive: false,
    showOnMobile: true,
    showOnDesktop: true
  },
  {
    linkHref: '/development',
    imageSrc: '/uploads/test-img.png',
    copy: 'Development',
    isActive: false,
    showOnMobile: false,
    showOnDesktop: true
  },
  {
    linkHref: '/development',
    imageSrc: '/uploads/test-img.png',
    copy: 'Dev',
    isActive: false,
    showOnMobile: true,
    showOnDesktop: false
  }
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Maggie Bittarelli's professional software development portfolio and personal home on the web." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/redcircle-m.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header client:load links={linkData} />
		<slot />
    <Footer />
	</body>
</html>
<style is:global>
	:root {
	}
	html {
		font-family: system-ui, sans-serif;
		/* background: #202a43; */
	}
	body {
		margin: 0;
    /* height: 100vh; */
    display: flex;
    flex-direction: column;

	}
  main {
    min-height: 100vh;
    /* height: fit-content; */
  }

  .mobile-only {
    display: none;
  }

  footer {
    justify-self: flex-end;
    /* align-self: flex-end; */
  }

  /* Mobile mode */
  @media (max-width: 769px) {
    .mobile-only {
      display: unset;
    }
    .desktop-only {
      display: none;
    }
  }


  @font-face {
    font-family: 'SpaceGrotesk';
    src: url('/fonts/SpaceGrotesk-Regular.otf') format('truetype');
  } 
  @font-face {
    font-family: 'Charsey';
    src: url('/fonts/Charsey-Regular-BF666d3416836e4.otf') format('truetype');
  } 
  @font-face {
    font-family: 'HobbitonHandscrawl';
    src: url('fonts/HobbitonHandscrawlRegular-eZA3.ttf') format('truetype');
  }

  @font-face {
    font-family: 'TheFoxOffice';
    src: url('/fonts/TheFoxOffice-4BewD.otf');
  }

  @font-face {
    font-family: 'Cyanotype';
    src: url('/fonts/Cyanotype-ndr0.ttf');
  }

  @font-face {
    font-family: 'OfficeSqueeze';
    src: url('/fonts/DkOfficeSqueezeRegular-J0m7.otf');
  }
</style>
