---
import Header from '../components/Header/Header.jsx';
import Footer from '../components/Footer/Footer.astro';

const { title } = Astro.props;

let linkData = [
  {
    linkHref: '/development',
    imageSrc: '/uploads/test-img.png',
    copy: 'Development',
    isActive: false,
    showOnMobile: false,
    showOnDesktop: true
  },
  {
    linkHref: '/development',
    imageSrc: '/uploads/test-img.png',
    copy: 'Dev',
    isActive: false,
    showOnMobile: true,
    showOnDesktop: false
  }
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Maggie Bittarelli's professional software development portfolio and personal home on the web." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/redcircle-m.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header client:load links={linkData} />
		<slot />
    <Footer />
	</body>
</html>
<style is:global>
	:root {
	}
	html {
		font-family: system-ui, sans-serif;
  }
	body {
		margin: 0;
    display: flex;
    flex-direction: column;

	}
  main {
    min-height: 100vh;
  }

  /* Mobile-only */
  .mobile-only {
    display: none;
  }

  /* Footer */
  footer {
    justify-self: flex-end;
  }

  /* Mobile mode */
  @media (max-width: 769px) {
    .mobile-only {
      display: unset;
    }
    .desktop-only {
      display: none;
    }
  }

  /* Fonts */
  @font-face {
    font-family: 'Charsey';
    src: url('/fonts/Charsey-Regular-BF666d3416836e4.otf') format('truetype');
  }

  @font-face {
    font-family: 'OfficeSqueeze';
    src: url('/fonts/DkOfficeSqueezeRegular-J0m7.otf');
  }
</style>
